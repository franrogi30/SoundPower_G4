<!DOCTYPE html>
<html lang="es">
<%- include("partials/head")%>

<body>
  <%- include("partials/navbar") %>
  <%- include("partials/social") %>

  <div class="container login">
    <div class="row"></div>
    
    <% if (typeof errors != 'undefined') { %>
  
      <% for( let i = 0; i < errors.length; i++) { %> 
       <li style="color:red;">
         <%= errors[i].msg %>
       </li><br>
      <% } %> 
      <% } %> 

        <div class="login-text">
          <h2>INGRESO</h2>
          <p>Para acceder inicie sesión</p>
        </div>
        <div class="main">
             <form id="login" action="/users/login" method="POST">
              <div class="form-group col-12 col-md-6">
                <label>Usuario</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Usuario">
                <span style="color: red;" class="col-12" id="errorEmail"></span>
              </div>
             
              <div class="form-group col-12 col-md-6">
                <label>contraseña</label>
                <input type="password"  class="form-control" id="pass" name="pass" placeholder="contraseña">
                <span style="color: red;" class="col-12" id="errorPass"></span>
              </div>
              <div>
              <input style="margin-bottom: 2vh;" type="checkbox" name="remember" id="remember"> Recordar
            </div>
            <div>
              <button style="background: #045757; color: #e4e4e4;" type="submit" class="btn btn-secondary col-1">Login</button>
            </div>
            </form>
         </div>
         <span  style="color: red;" class="col-12"id="msgError"></span>
    </div>
  <%- include("partials/footer") %>
  <script src="/javascript/login.js"></script>
</body>

</html>