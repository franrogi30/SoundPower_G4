<!DOCTYPE html>
<html lang="es">
    <%- include("partials/head")%>

<body>
    <%- include("partials/navbar") %> 
    <%- include("partials/social") %>
    
<div class="container">
    <section class="listadoProductos">
    <div class="row products">
        <div class="col-12">
            <h2>
            <%= title %>
            </h2>
        <div class="filas">
                        <% for (let i = 0; i < products.length;i++) { %>
                       <ul style="list-style: none;">
                         <li>   <article>
                            <figure>
                                <ul>
                                <a href="/products/details/<%= products[i].id %> "><img src="/images/products/<%- products[i].imagen %>  " alt=" ">
                                    <%- products[i].nombre %>
                                </a>
                            </figure>
                            <h5>
                                    <%- products[i].price %>
                            </h5> 
                        </li> </article>
                    </ul>     
                            <% } %> 
                        </div>
                    </div>
                </section>
            </div>
            
        </div>
    </div>
</div>

    <%- include("partials/footer") %>
</body>
</html>